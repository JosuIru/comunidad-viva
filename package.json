{
  "name": "truk",
  "version": "1.0.0",
  "private": true,
  "description": "Truk - Plataforma de econom√≠a colaborativa local e intercambio comunitario",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:web": "cd packages/web && npm run dev",
    "build": "./build.sh",
    "start:prod": "cd packages/backend && npx ts-node -r tsconfig-paths/register src/main.ts",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
