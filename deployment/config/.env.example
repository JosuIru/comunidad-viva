# ========================================
# TRUK - Variables de Entorno de Ejemplo
# ========================================
# Copiar este archivo y configurar según tu entorno

# ========================================
# CONFIGURACIÓN DE INSTALACIÓN
# ========================================

# Directorio de instalación
INSTALL_DIR=/opt/truk

# Usuario de la aplicación
APP_USER=truk

# Versiones de software
NODE_VERSION=20
POSTGRES_VERSION=15

# ========================================
# DOMINIO Y URLs
# ========================================

# Dominio principal (frontend)
DOMAIN=truk.app
# Subdominio para API (backend)
API_DOMAIN=api.truk.app

# Email para certificado SSL
EMAIL=admin@truk.app

# ========================================
# BASE DE DATOS
# ========================================

# Nombre de la base de datos
DB_NAME=comunidad_viva
# Usuario de base de datos
DB_USER=truk_user
# Contraseña (se genera automáticamente si no se especifica)
DB_PASSWORD=

# URL de conexión completa
# DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@localhost:5432/${DB_NAME}

# ========================================
# BACKEND (.env)
# ========================================

# Entorno
NODE_ENV=production

# Puerto del backend
PORT=4000

# Secrets (se generan automáticamente si no se especifican)
JWT_SECRET=
SESSION_SECRET=

# Redis
REDIS_URL=redis://localhost:6379

# URLs
FRONTEND_URL=https://truk.app
CORS_ORIGIN=https://truk.app

# Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@truk.app

# AWS S3 (opcional para archivos)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-1
AWS_S3_BUCKET=

# Logging
LOG_LEVEL=info

# ========================================
# FRONTEND (.env.production)
# ========================================

# API URLs
NEXT_PUBLIC_API_URL=https://api.truk.app
NEXT_PUBLIC_WS_URL=wss://api.truk.app

# Analytics (opcional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_SENTRY_DSN=

# ========================================
# BACKUP
# ========================================

# Directorio de backups
BACKUP_DIR=/opt/truk/backups

# Días de retención de backups
RETENTION_DAYS=30

# Tipo de backup (full, database, files)
BACKUP_TYPE=full

# ========================================
# MONITOREO Y ALERTAS
# ========================================

# Email para alertas
ALERT_EMAIL=admin@truk.app

# Slack Webhook (opcional)
SLACK_WEBHOOK=

# Umbrales de alerta
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80
DISK_THRESHOLD=85
RESPONSE_TIME_THRESHOLD=5000

# ========================================
# SEGURIDAD
# ========================================

# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# CORS
CORS_CREDENTIALS=true

# Session
SESSION_MAX_AGE=86400000

# ========================================
# FEATURES (opcional)
# ========================================

# Habilitar/deshabilitar features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR=false
ENABLE_SOCIAL_LOGIN=false

# ========================================
# INTEGRATIONS (opcional)
# ========================================

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook OAuth
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Stripe (pagos)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ========================================
# DESARROLLO
# ========================================

# Solo para desarrollo local
# NODE_ENV=development
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/truk_dev
# FRONTEND_URL=http://localhost:3000
# NEXT_PUBLIC_API_URL=http://localhost:4000
