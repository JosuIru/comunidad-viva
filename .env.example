# Database
DB_USER=comunidad
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://comunidad:your_secure_password_here@localhost:5432/comunidad_viva

# Redis
REDIS_URL=redis://localhost:6379

# Auth
JWT_SECRET=your_jwt_secret_here_minimum_32_chars
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_minimum_32_chars_different_from_access
JWT_REFRESH_TOKEN_EXPIRATION=7d
NEXTAUTH_SECRET=your_nextauth_secret_here_minimum_32_chars
NEXTAUTH_URL=http://localhost:3000

# URLs
API_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000

# Stripe (Payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Storage (S3 compatible)
S3_BUCKET=comunidad-viva
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_REGION=eu-west-1
S3_ENDPOINT=https://s3.amazonaws.com

# Monitoring
GRAFANA_PASSWORD=admin
SENTRY_DSN=https://your_sentry_dsn_here

# Environment
NODE_ENV=development
PORT=4000
