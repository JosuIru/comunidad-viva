# Polygon Configuration
# Copy this to .env and fill with your values

# RPC URLs
POLYGON_RPC_URL=https://polygon-rpc.com
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Private Keys (NEVER commit these!)
POLYGON_DEPLOYER_PRIVATE_KEY=your_private_key_here
POLYGON_BRIDGE_PRIVATE_KEY=your_bridge_operator_private_key_here

# Polygonscan API Key (for contract verification)
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Bridge Operator Address (optional, defaults to deployer)
BRIDGE_OPERATOR_ADDRESS=0x...

# After deployment, add:
POLYGON_SEMILLA_CONTRACT=0x...
