# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development

# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Redis Configuration (for rate limiting, caching, sessions)
REDIS_URL=redis://localhost:6379

# JWT Authentication
# CRITICAL: Generate a secure secret with: openssl rand -base64 64
# Minimum 32 characters required for security
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_MIN_32_CHARS

# Server Configuration
PORT=4000

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:3000

# Email Configuration (optional for production)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# AWS S3 Configuration (optional for file uploads)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name

# Blockchain Configuration (after deploying smart contracts)
# SemillaToken contract addresses (get from deployment)
# Leave empty until you deploy to each network
SEMILLA_TOKEN_AMOY=
SEMILLA_TOKEN_POLYGON=
SEMILLA_TOKEN_BSC_TESTNET=
SEMILLA_TOKEN_BSC=

# RPC URLs for blockchain networks
# Testnets (free)
AMOY_RPC_URL=https://rpc-amoy.polygon.technology
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545

# Mainnets (use with caution)
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org

# Legacy (old config, keep for compatibility)
SEMILLA_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
SEMILLA_MINT_ADDRESS=11111111111111111111111111111111
SOLANA_RPC_URL=https://api.devnet.solana.com

# Federation & Decentralized Identity
FEDERATION_ENABLED=true
COMMUNITY_DID=did:truk:xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Deployment mode (true si usas contratos propios en lugar del oficial)
CUSTOM_DEPLOYMENT=false
